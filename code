#include <Arduino.h>
#include <U8g2lib.h>

#include <Microduino_Tem_Hum.h>
#ifdef U8X8_HAVE_HW_SPI
#include <SPI.h>
#endif
#ifdef U8X8_HAVE_HW_I2C
#include <Wire.h>
#endif
U8G2_SSD1306_128X64_NONAME_F_HW_I2C u8g2(U8G2_R0);

int var_TEMP;

int var_UM;

int var_LUM;

int var_RUI;

int var_CO2;

Tem_Hum_S2 Tem_Hum_termo;


void setup()
{
    u8g2.begin();
    Tem_Hum_termo.begin();

    u8g2.clearBuffer();
    u8g2.sendBuffer();

}

void loop()
{
    var_TEMP=Tem_Hum_termo.getTemperature();
    var_UM=Tem_Hum_termo.getHumidity();
    var_LUM=(analogRead(A2))-0;
    var_RUI=(analogRead(A0))-0;
    var_CO2=(analogRead(A6))-0;

    
    u8g2.setFont(u8g2_font_9x15_tr);
    u8g2.setCursor(0, 10);
    u8g2.print(String("TEMP = ")+String((var_TEMP)));
    u8g2.sendBuffer();

    
    u8g2.setFont(u8g2_font_9x15_tr);
    u8g2.setCursor(0, 23);
    u8g2.print(String("UM =")+String((var_UM)));
    u8g2.sendBuffer();

    
    u8g2.setFont(u8g2_font_9x15_tr);
    u8g2.setCursor(0, 38);
    u8g2.print(String("LUM =")+String((var_LUM)));
    u8g2.sendBuffer();
    delay(2*1000);
    u8g2.clearBuffer();
    u8g2.sendBuffer();

    
    u8g2.setFont(u8g2_font_9x15_tr);
    u8g2.setCursor(0, 38);
    u8g2.print("...");
    u8g2.sendBuffer();

    
    u8g2.setFont(u8g2_font_9x15_tr);
    u8g2.setCursor(0, 50);
    u8g2.print(String("RUI =")+String((var_RUI)));
    u8g2.sendBuffer();

    
    u8g2.setFont(u8g2_font_9x15_tr);
    u8g2.setCursor(0, 63);
    u8g2.print(String("CO2 =")+String((var_CO2)));
    u8g2.sendBuffer();
    delay(2*1000);
    u8g2.clearBuffer();
    u8g2.sendBuffer();

}
